{
  "name": "@avail-project/metamask-avail-adapter",
  "version": "1.0.8",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "author": "availproject",
  "license": "Apache-2.0",
  "homepage": "https://github.com/availproject/metamask-snap-avail/tree/master/packages/adapter",
  "keywords": [
    "avail",
    "metamask",
    "snap",
    "substrate"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@polkadot/api": "^10.9.1",
    "@polkadot/extension-inject": "^0.46.5",
    "@polkadot/types-augment": "^10.9.1",
    "avail-js": "^0.1.0"
  },
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "yarn run build:lib && yarn run build:types",
    "build:lib": "tsc --build tsconfig.json",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "yarn run lint:style && yarn run lint:types",
    "lint:types": "tsc --noEmit --pretty",
    "lint:style": "eslint --color 'src/**/*.{js,ts,tsx}'",
    "lint:style:fix": "yarn run lint:style --fix",
    "test": "exit 0"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "typescript": "4.7.3"
  }
}
